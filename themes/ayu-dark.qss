/* ayu Dark theme stylesheet for Loom text editor */
/* implements ayu Dark color palette for consistent theming */
/* version -- 1.0.0 */

/* ayu Dark color palette */
/* background colors */
/* bg: #0f1419, panel: #14191f, selection: #253340, line: #1f2937 */

/* foreground colors */
/* fg: #bfbdb6, comment: #5c6773, accent: #e6b450 */

/* accent colors */
/* orange: #ff8f40, red: #f07178, green: #c2d94c, blue: #59c2ff */
/* purple: #d2a6ff, cyan: #95e6cb, yellow: #e6b450 */

/* main window styling */
QMainWindow {
    background-color: #0f1419;
    color: #bfbdb6;
}

/* menu bar styling */
QMenuBar {
    background-color: #14191f;
    color: #bfbdb6;
    border-bottom: 1px solid #1f2937;
    padding: 2px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
    margin: 2px;
    border-radius: 3px;
}

QMenuBar::item:selected {
    background-color: #253340;
    color: #e6b450;
}

QMenuBar::item:pressed {
    background-color: #ff8f40;
    color: #0f1419;
}

/* menu styling */
QMenu {
    background-color: #14191f;
    color: #bfbdb6;
    border: 1px solid #1f2937;
    padding: 4px;
}

QMenu::item {
    padding: 6px 20px;
    border-radius: 3px;
}

QMenu::item:selected {
    background-color: #253340;
    color: #e6b450;
}

QMenu::separator {
    height: 1px;
    background-color: #1f2937;
    margin: 4px 0px;
}

/* text editor styling */
QPlainTextEdit {
    background-color: #0f1419;
    color: #e6e1cf;
    border: none;
    selection-background-color: #253340;
    selection-color: #e6e1cf;
    line-height: 1.4;
}

/* KTextEditor widget styling */
KTextEditor--View {
    background-color: #0f1419;
    color: #e6e1cf;
    border: none;
    selection-background-color: #253340;
    selection-color: #e6e1cf;
}

KTextEditor--Document {
    background-color: #0f1419;
    color: #e6e1cf;
}

/* Remove borders from KTextEditor components */
QWidget[class*="KTextEditor"] {
    border: none;
    background-color: #0f1419;
    color: #e6e1cf;
}

/* Text edit widgets in general */
QTextEdit {
    background-color: #0f1419;
    color: #e6e1cf;
    border: none;
    selection-background-color: #253340;
    selection-color: #e6e1cf;
}

/* Remove any white borders from editor containers */
QFrame {
    border: none;
    background-color: #0f1419;
}

QScrollArea {
    border: none;
    background-color: #0f1419;
}

/* status bar styling */
QStatusBar {
    background-color: #14191f;
    color: #bfbdb6;
    border-top: 1px solid #1f2937;
    padding: 2px;
}

QStatusBar::item {
    border: none;
}

/* dialog styling */
QDialog {
    background-color: #0f1419;
    color: #bfbdb6;
}

QLabel {
    color: #bfbdb6;
}

/* file dialog styling */
QFileDialog {
    background-color: #0f1419;
    color: #bfbdb6;
}

QFileDialog QListView {
    background-color: #14191f;
    color: #bfbdb6;
    selection-background-color: #253340;
    selection-color: #e6b450;
}

QFileDialog QTreeView {
    background-color: #14191f;
    color: #bfbdb6;
    selection-background-color: #253340;
    selection-color: #e6b450;
}

/* button styling */
QPushButton {
    background-color: #14191f;
    color: #bfbdb6;
    border: 1px solid #1f2937;
    padding: 6px 12px;
    border-radius: 3px;
    min-width: 60px;
}

QPushButton:hover {
    background-color: #1f2937;
    color: #e6b450;
}

QPushButton:pressed {
    background-color: #ff8f40;
    color: #0f1419;
}

QPushButton:default {
    background-color: #59c2ff;
    border-color: #95e6cb;
    color: #0f1419;
}

QPushButton:default:hover {
    background-color: #95e6cb;
}

/* line edit styling */
QLineEdit {
    background-color: #14191f;
    color: #bfbdb6;
    border: 1px solid #1f2937;
    padding: 4px;
    border-radius: 3px;
    selection-background-color: #253340;
    selection-color: #e6b450;
}

QLineEdit:focus {
    border-color: #59c2ff;
}

/* combo box styling */
QComboBox {
    background-color: #14191f;
    color: #bfbdb6;
    border: 1px solid #1f2937;
    padding: 4px;
    border-radius: 3px;
}

QComboBox:hover {
    border-color: #59c2ff;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #bfbdb6;
}

QComboBox QAbstractItemView {
    background-color: #14191f;
    color: #bfbdb6;
    selection-background-color: #253340;
    selection-color: #e6b450;
    border: 1px solid #1f2937;
}

/* tab widget styling - modern flat design */
QTabWidget {
    background-color: #0f1419;
    border: none;
}

QTabWidget::pane {
    background-color: #0f1419;
    border: none;
    margin: 0px;
    padding: 0px;
}

QTabWidget::tab-bar {
    alignment: left;
}

/* tab bar styling - clean modern look */
QTabBar {
    background-color: #0a0e13;
    border: none;
    outline: none;
    qproperty-drawBase: 0;
    qproperty-autoRaise: false;
    qproperty-usesScrollButtons: false;
}

QTabBar::tab {
    background-color: #0a0e13;
    color: #5c6773;
    padding: 10px 20px;
    margin: 0px;
    border: none;
    min-width: 100px;
    max-height: 32px;
}

QTabBar::tab:selected {
    background-color: #0f1419;
    color: #e6b450;
}

QTabBar::tab:hover:!selected {
    background-color: #14191f;
    color: #bfbdb6;
}

QTabBar::tab:first {
    margin-left: 0px;
}

QTabBar::tab:last {
    margin-right: 0px;
}

/* close button - modern circular design */
QTabBar::close-button {
    background-color: rgba(31, 41, 55, 0.6);
    border: none;
    padding: 0px;
    margin: 0px 6px 0px 8px;
    width: 18px;
    height: 18px;
    border-radius: 9px;
    subcontrol-position: right;
}

QTabBar::close-button:hover {
    background-color: #f07178;
    border-radius: 9px;
}

QTabBar::close-button:pressed {
    background-color: #d95757;
    border-radius: 9px;
}

/* Better visibility on selected tabs */
QTabBar::tab:selected QTabBar::close-button {
    background-color: rgba(92, 103, 115, 0.8);
}

QTabBar QToolButton {
    background-color: transparent;
    border: none;
    color: #5c6773;
    font-size: 14px;
    font-weight: bold;
}

QTabBar QToolButton:hover {
    color: #e6b450;
}

/* scroll bar styling - modern and smooth */
QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    border-radius: 4px;
    margin: 2px;
}

QScrollBar::handle:vertical {
    background-color: rgba(92, 103, 115, 0.7);
    border-radius: 4px;
    min-height: 30px;
    margin: 0px;
}

QScrollBar::handle:vertical:hover {
    background-color: rgba(230, 180, 80, 0.9);
}

QScrollBar::handle:vertical:pressed {
    background-color: rgba(230, 180, 80, 1.0);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
    border: none;
    background: none;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: transparent;
    height: 8px;
    border-radius: 4px;
    margin: 2px;
}

QScrollBar::handle:horizontal {
    background-color: rgba(92, 103, 115, 0.7);
    border-radius: 4px;
    min-width: 30px;
    margin: 0px;
}

QScrollBar::handle:horizontal:hover {
    background-color: rgba(230, 180, 80, 0.9);
}

QScrollBar::handle:horizontal:pressed {
    background-color: rgba(230, 180, 80, 1.0);
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
    border: none;
    background: none;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* KTextEditor specific scroll area styling */
QScrollArea {
    border: none;
    background-color: transparent;
}

QAbstractScrollArea {
    border: none;
    background-color: transparent;
}

QAbstractScrollArea QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    border-radius: 4px;
}

QAbstractScrollArea QScrollBar::handle:vertical {
    background-color: rgba(92, 103, 115, 0.6);
    border-radius: 4px;
    min-height: 30px;
}

QAbstractScrollArea QScrollBar::handle:vertical:hover {
    background-color: rgba(92, 103, 115, 0.8);
}
